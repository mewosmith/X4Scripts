<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_AnotherExplorer" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

  <order id="JP_AnotherExplorer" name="JP AnotherExplorer" description="Another explorer logic" category="navigation" infinite="true">
    <params>
      <param name="SectorToExplore" type="object" default="this.sector" text="Sector to explore">
        <input_param name="class" value="[class.sector]"/>
      </param>
      <param name="HomeSector" type="object" default="this.sector" text="Home Position or Station">
        <input_param name="class" value="[class.sector, class.station]"/>
      </param>
      <param name="FindGates" required="false" type="bool" default="true" text="Discover Gates?"/>
      <param name="FindStations" required="false" type="bool" default="true" text="Discover Stations?"/>
      <param name="EntireGalaxy" required="false" type="bool" default="false" text="Explore Galaxy?"/>
      <param name="ExploreEnemySectors" required="false" type="bool" default="false" text="Explore Enemy Sectors?"/>
      <param name="ExploreEnemyStations" required="false" type="bool" default="false" text="Explore Enemy Stations?"/>
      <param name="ReturnHome" required="false" type="bool" default="true" text="Return Home?"/>
      <param name="Debug" required="false" type="bool" default="false" text="Debug text" advanced="true"/>
    </params>
    <skill min="0"/>
    <requires>
      <match shiptype="shiptype.lasertower" negate="true"/>
    </requires>
  </order>

  <interrupts>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler" />
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler" />
  </interrupts>

  <init>
  </init>

  <attention min="unknown">
    <actions>
      <wait exact="1ms"/>
      <!-- Galaxy exploring ~~~~~~~~~~~~~~~~~~~~~  -->
      <do_if value="$EntireGalaxy">
        <create_list name="$Sectors"/>
        <find_sector name="$TempSectors" space="player.galaxy" multiple="true"/>
        <do_if value="$ExploreEnemySectors" exact="false">
          <create_list name="$SectorsToRemove"/>
          <do_all exact="$TempSectors.count" counter="$_it">
            <do_if value="$TempSectors.{$_it}.owner.mayattack.{this.ship}">
              <append_to_list name="$SectorsToRemove" exact="$TempSectors.{$_it}"/>
            </do_if>
          </do_all>
          <remove_from_list name="$TempSectors" list="$SectorsToRemove"/>
          <remove_value name="$SectorsToRemove"/>
        </do_if>

        <!-- Sort all objects by distance to the ship -->
        <do_while value="$TempSectors.count gt 0">
          <set_value name="$index" exact="0"/>
          <set_value name="$biggestDistance" exact="0"/>
          <do_all exact="$TempSectors.count" counter="$_it">
            <do_if value="this.ship.distanceto.{$TempSectors.{$_it}} gt $biggestDistance">
              <set_value name="$biggestDistance" exact="this.ship.distanceto.{$TempSectors.{$_it}}"/>
              <set_value name="$index" exact="$_it"/>
            </do_if>
          </do_all>
          <append_to_list name="$Sectors" exact="$TempSectors.{$index}"/>
          <remove_from_list name="$TempSectors" list="$Sectors"/>
        </do_while>
        <remove_value name="$TempSectors"/>

        <do_if value="$Debug">
          <do_all exact="$Sectors.count" counter="$_it" reverse="true">
            <debug_text text="'%1  ~~  %2'.[this.ship.distanceto.{$Sectors.{$_it}}, $Sectors.{$_it}.knownname]"/>
          </do_all>
        </do_if>
        
        <do_all exact="$Sectors.count" counter="$_jt" reverse="true">
          <!-- Sector exploring ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
          <run_script name="'JP_ExploreSector'">
            <param name="SHIP" value="this"/>
            <param name="FIND_GATES" value="$FindGates"/>
            <param name="FIND_STATIONS" value="$FindStations"/>
            <param name="SECTOR_TO_EXPLORE" value="$Sectors.{$_jt}"/>
            <param name="EXPLORE_ENEMY_STATIONS" value="$ExploreEnemyStations"/>
            <param name="DEBUG" value="$Debug"/>
          </run_script>
        </do_all>
        <remove_value name="$Sectors"/>
      </do_if>
      <!-- Only Sector exploring ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_else>
        <run_script name="'JP_ExploreSector'">
          <param name="SHIP" value="this"/>
          <param name="FIND_GATES" value="$FindGates"/>
          <param name="FIND_STATIONS" value="$FindStations"/>
          <param name="SECTOR_TO_EXPLORE" value="$SectorToExplore"/>
          <param name="EXPLORE_ENEMY_STATIONS" value="$ExploreEnemyStations"/>
          <param name="DEBUG" value="$Debug"/>
        </run_script>
      </do_else>
      <!-- Return Home? ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$ReturnHome">
        <do_if value="$HomeSector.isclass.space">
          <run_script name="'move.generic'">
            <param name="destination" value="$HomeSector" />
            <param name="endintargetzone" value="true" />
          </run_script>
          <run_script name="'move.idle'">
            <param name="TimeOut" value="10s" />
          </run_script>
        </do_if>
        <do_if value="$HomeSector.isclass.station">
          <run_script name="'order.dock'">
            <param name="destination" value="$HomeSector" />
          </run_script>
        </do_if>
      </do_if>

      <!-- All done ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$Debug">
        <debug_text text="'Explorer %1 ~~ %2 is done with the workand drinks a cup of tea'.[this.ship.name, this.ship.idcode]"/>
      </do_if>
      <show_help custom="'Explorer\n%1 ~~ %2\nis done with the work\nand drinks a cup of tea'.[this.ship.name, this.ship.idcode]" duration="4s" log="true"/>

      <set_order_syncpoint_reached order="this.ship.order"/>
      <cancel_order order="this.ship.order" />
      <wait exact="1ms"/>

    </actions>
  </attention>

  <on_abort>
  </on_abort>

</aiscript>